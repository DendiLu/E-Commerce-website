<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	<context:component-scan base-package="com.qingcheng"></context:component-scan>


	<bean id="httpHost" class="org.apache.http.HttpHost">
		<constructor-arg index="0" value="127.0.0.1"></constructor-arg>
		<constructor-arg index="1" value="9200"></constructor-arg>
		<constructor-arg index="2" value="http"></constructor-arg>
	</bean>
	<bean id="restClientBuilder" class="org.elasticsearch.client.RestClient" factory-method="builder">
		<constructor-arg ref="httpHost"></constructor-arg>
	</bean>
	<bean id="restHighLevelClient" class="org.elasticsearch.client.RestHighLevelClient">
		<constructor-arg ref="restClientBuilder"></constructor-arg>
	</bean>

</beans>